class Solution {
    public int maximumWealth(int[][] accounts) {
      int bestWealth = 0;

        // Navigate trough the rows
        for (int i = 0; i < accounts.length; i++) {

            int temp = 0;

            // Navigate trough the columns of one row
            for (int j = 0; j < accounts[0].length; j++) {

                temp += accounts[i][j];
            }

            // Check if the value found is the best
            if (temp > bestWealth)
                bestWealth = temp;
        }

        return bestWealth;
    }
}
